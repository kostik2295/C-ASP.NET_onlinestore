@page
@model ToyStoreWEB.Pages.AddRewModel
@{
}
<head>
    <title>@ViewData["Title"]ChildrenToys</title>
    <style>
                * {
            box-sizing: border-box
        }

        /* Full-width input fields */
        input[type=text], input[type=password], select {
            width: 100%;
            padding: 5px;
            margin: 2px;
            display: inline-block;
            border: none;
            background: #f1f1f1;
        }

        hr {
            border: 1px solid #f1f1f1;
            margin-bottom: 25px;
        }

        /* Set a style for the submit/register button */
        .registerbtn {
            background-color: #ff6600;
            color: white;
            padding: 16px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
            opacity: 0.9;
        }

            .registerbtn:hover {
                opacity: 1;
            }

        /* Add a blue text color to links */
        a {
            color: dodgerblue;
        }

        /* Set a grey background color and center the text of the "sign in" section */
        .signin {
            background-color: #f1f1f1;
            text-align: center;
        }

        h1 {
            color: #ff6600;
            text-align: center;
        }

        h3 {
            color: #333;
            margin-top: 20px;
        }

        p {
            color: #666;
            line-height: 1.5;
        }

        ul {
            list-style-type: disc;
            margin-left: 20px;
        }

        iframe {
            width: 100%;
            height: 300px;
            border: none;
        }
    </style>
</head>
<body>
    
    <div class="container" style="border: 2px solid #333;">
        <h1>Оформление заказа</h1>
        <form method="post">
            <label for="adress">Адрес доставки:</label>
            <input type="text" name="adress" required value="@Model.User.Adress"><br>

            <label for="phone">Телефон:</label>
            <input type="text" name="phone" required value="@Model.User.Phone"><br>

            <label for="comment">Комментарий к заказу:</label>
            <input type="text" name="comment" required><br>
            <input asp-page-handler="Orders" type="submit" class="registerbtn" value="Отправить"/>
        </form>
    </div>
</body>
